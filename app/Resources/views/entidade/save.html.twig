{% extends 'base.html.twig' %}

{% block content %}
{{ parent() }}

{{ form_start(form) }}
{{ form_widget(form) }}
<div class="d-flex justify-content-between">
    <button type="submit" class="btn btn-outline-success mr-5">
        <svg xmlns="http://www.w3.org/2000/svg" height="20" fill="currentColor" viewBox="0 0 16 20">
            <path
                d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z" />
        </svg>
        Salvar
    </button>
    {% if entidade.id != null %}
    <button type="submit" class="btn btn-outline-danger" form="delete-form">
        <svg xmlns="http://www.w3.org/2000/svg" height="20" fill="currentColor" viewBox="0 0 16 20">
            <path
                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
            <path fill-rule="evenodd"
                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
        </svg>
        Excluir
    </button>
    {% endif %}
</div>
{{ form_end(form) }}

{% if entidade.id != null %}
{{ form_start(delete_form) }}
{{ form_end(delete_form) }}
{% endif %}

{% endblock %}

{% block javascripts %}
{{ parent() }}

<script src="/assets/js/jquery.inputmask.min.js"></script>
<script>
    $valor = $("#form_valor")
    $valor.val($valor.val().replace(".", ","))
    $valor.inputmask({
        "alias": "decimal",
        "digits": 2,
        "groupSeparator": ".",
        "radixPoint": ",",
        "autoGroup": true,
        "prefix": "R$ ",
        "digitsOptional": false,
        "placeholder": "0",
        'removeMaskOnSubmit': true,
    })
</script>
{% endblock %}