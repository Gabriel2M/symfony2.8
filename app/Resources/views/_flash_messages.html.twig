{% if app.session.started and app.session.flashBag.peekAll is not empty %}
{% set flash_headers = {
    warning: 'Atenção!',
    danger: 'Atenção!',
    success: 'Sucesso!',
 } %}
<div class="messages">
    {% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
    <div class="toast mw-100 shadow-sm mb-2 border-{{ type }}" aria-live="assertive" aria-atomic="true"
        data-delay="3000">
        <div class="toast-header">
            <span class="h6 text-muted border-bottom border-{{ type }} px-3 mr-auto">{{ flash_headers[type] }}</span>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body h6 mb-0 text-secondary">
            {{ message }}
        </div>
    </div>
    {% endfor %}
    {% endfor %}
</div>
{% endif %}